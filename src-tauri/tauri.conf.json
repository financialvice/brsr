{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "brsr",
  "version": "0.0.3",
  "identifier": "com.brsr.browser",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Browser",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 360,
        "minHeight": 240,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["http", "https"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCQTkwODlGOEU3RkY1RTIKUldUaTlYK09ud2lwSzJrRVorRGZBWjVKaTdUaXhJSUh1K3V5NEhMT2tVcXRTajd0UmFHWloyZWsK",
      "endpoints": [
        "https://github.com/financialvice/brsr/releases/latest/download/latest.json"
      ]
    }
  }
}
