{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "brsr",
  "version": "0.0.1",
  "identifier": "com.brsr.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Browser",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 360,
        "minHeight": 240,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
